#!/bin/sh
set -e
echo "Terraforming..."
terraform apply

if [ ! -f ./admin.conf ]; then
  echo "Fetching kubeconfig from master..."
  scp core@[$(terraform output master_ipv6)]:.kube/config ./admin.conf || echo "Master node didn't come up yet. Try again in a bit"
fi

echo "Applying bgp peers..."
terraform output calico_bgp_peers | calicoctl apply -f -


